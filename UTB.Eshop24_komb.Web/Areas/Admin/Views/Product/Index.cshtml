@model IList<Product>
@{
    ViewData["Title"] = "Product Administration";
}
<h1>@ViewData["Title"]</h1>

<a asp-action="Create">Create Product</a>
@{
    if (Model != null && Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@nameof(Product.Id)</th>
                    <th scope="col">@nameof(Product.Name)</th>
                    <th scope="col">@nameof(Product.Description)</th>
                    <th scope="col">@nameof(Product.Price)</th>
                    <th scope="col">@nameof(Product.ImageSrc)</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>

                @for (int i = 0; i < Model.Count; ++i)
                {
                    Product product = Model[i];
                    <tr>
                        <th scope="row">@product.Id</th>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.Price</td>
                        <td>@product.ImageSrc</td>
                        <td><a asp-action="Delete" asp-route-id="@product.Id" onclick="return ConfirmDelete();">Delete</a></td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p>Product table is empty!</p>
    }
}

@section Scripts
{
    <script src="~/js/confirm.js"></script>
}